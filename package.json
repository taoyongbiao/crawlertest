{
  "name": "crawlertest",
  "version": "1.0.0",
  "description": "Web crawler application",
  "main": "dist/main.bundle.js",
  "type": "module",
  "scripts": {
    "start": "electron . --inspect=5858",
    "build": "webpack --config ./.erb/config/webpack.main.config.js && webpack --config ./.erb/config/webpack.renderer.config.js",
    "build:main": "webpack --config ./.erb/config/webpack.main.config.js",
    "build:renderer": "webpack --config ./.erb/config/webpack.renderer.config.js",
    "build:preload": "webpack --config ./.erb/config//webpack.preload.config.js --progress",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/config/webpack.renderer.config.js",
    "start:main": "cross-env NODE_ENV=development webpack serve --config ./.erb/config/webpack.main.config.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "build:css": "npx postcss src/renderer/App.css -o dist/output.css",
    "watch:css": "npx postcss src/renderer/App.css -o dist/output.css --watch"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.17",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.16",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-node-externals": "^3.0.0"
  }
}
